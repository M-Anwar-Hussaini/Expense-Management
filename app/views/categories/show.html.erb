<div class="text-bg-primary px-2 py-4 d-flex align-items-center justify-content-between mb-2">
  <%= link_to '<', root_path, class: 'btn btn-primary' %>
  <h4 class="m-0">List of all expense for "<%= @category.name %>"</h4>
</div>
<% if @expenses.empty? %>
  <%= render 'layouts/alert', msg: 'There is not any expense for this category yet.', class_name: 'primary' %>
<% end %>

<div class="d-flex justify-content-between my-3 align-items-center">
  <%= link_to 'Add new category', new_user_category_path(current_user), class: 'btn btn-primary me-2' %>
  <p class="m-0 fw-bold text-muted">Total: $<%=@category.total_price %></p>
</div>

<ul class="list-group my-3">
  <% @expenses.each do |item| %>
    <li class="list-group-item my-2 border">
      <div class="row align-items-center">
        <div class="col-9">
          <h3 class="mb-4">
            <%= item.name %></h3>
          <span class="text-muted"><%= item.created_at %></span>
        </div>
        <div class="col-3 text-center">$<strong><%= item.amount %></strong></div>
      </div>
    </li>
  <% end %>
</ul>
<div class="my-3">
  <%= link_to 'Add new expense', new_user_expense_path(current_user), class: 'btn btn-secondary w-100' %>
</div>

<%= render 'layouts/header', msg: "All expenses for \"#{@category.name}\"" + @category.name, btn: '<' %>
<% if @expenses.empty? %>
  <%= render 'layouts/alert', msg: 'There is not any expense for this category yet.', class_name: 'primary' %>
<% end %>

<div class="d-flex justify-content-between my-3 align-items-center bg-body text-muted p-3">
  <strong>Total expenses: </strong>
  <p class="m-0 fw-bold text-muted">$<%=@category.total_price %></p>
</div>

<ul class="list-group">
  <% @expenses.each do |item| %>
    <li class="list-group-item my-2 border">
      <div class="row align-items-center">
        <div class="col-9">
          <h3 class="mb-4">
            <%= item.name %></h3>
          <span class="text-muted"><%= item.created_at %></span>
        </div>
        <div class="col-3 text-center">$<strong><%= item.amount %></strong></div>
      </div>
    </li>
  <% end %>
</ul>
<div class="btn-container mt-auto">
  <%= link_to 'Add new expense', new_user_expense_path(current_user), class: 'custom-btn' %>
</div>

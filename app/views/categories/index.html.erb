<%= render 'layouts/header', msg: 'List of all categories', btn: 'Home' %>
<% if @categories.empty? %>
  <%= render 'layouts/alert', msg: 'There is not any category yet.', class_name: 'primary' %>
<% end %>

<ul class="list-group mb-auto">
  <% @categories.each do |item| %>
    <li class="list-group-item my-2 border">
      <div class="row align-items-center">
        <div class="col-3 ">
          <img src="<%= item.icon %>" alt="
          <% item.icon %>" class="img-thumbnail rounded-circle">
        </div>
        <div class="col-6">
          <h3 class="mb-4">
            <%= link_to item.name, user_category_path(current_user, item), class: 'link-dark text-decoration-none' %></h3>
          <span class="text-muted"><%= item.created_at %></span>
        </div>
        <div class="col-3 text-center">$<strong><%= item.total_price %></strong></div>
      </div>
    </li>
  <% end %>
</ul>
<div class="btn-container">
  <%= link_to 'Add new category', new_user_category_path(current_user), class: 'custom-btn' %>
</div>

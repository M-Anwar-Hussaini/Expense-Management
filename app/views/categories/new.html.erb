<div class="form">
  <h1>Add a new thing</h1>

  <%= form_with(model: @category, url: user_categories_path(current_user), method: :post) do |form| %>
    <div class="my-3">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="my-3">
      <%= form.label :icon, "Icon (paste the url of your icon)" %>
      <%= form.text_field :icon, class: 'form-control' %>
    </div>
    <div class="my-3 text-end">
      <%= form.submit class: 'btn btn-success' %>
    </div>
  <% end %>
</div>